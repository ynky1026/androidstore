<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" 
	android:background="@drawable/n_pop_border" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@+id/title" 
    	android:textSize="18.0sp" 
    	android:textColor="#FFFFFF" 
    	android:ellipsize="end" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:layout_marginLeft="59dip" 
    	android:layout_marginTop="7dip" 
    	android:text="text title" 
    	android:singleLine="true" />
    
    <LinearLayout android:gravity="center_horizontal" 
    	android:orientation="horizontal" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:layout_marginTop="26.0dip"
    	>

	    <ImageView android:id="@+id/progress_icon" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
		/>
			
	    <TextView android:id="@+id/text_body" 
	    	android:layout_marginLeft="10.0dip" 
	    	android:ellipsize="end" 
	    	android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content" 
	    	android:textColor="#333333" 
	    	android:gravity="center" 
	    	android:textSize="18.0sp" 
	    	android:layout_marginTop="20.0dip" 
	    	android:text="text body"></TextView>
    </LinearLayout>
</LinearLayout>
